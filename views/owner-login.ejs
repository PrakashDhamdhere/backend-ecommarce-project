<%- include('./partials/header') %>
    <% if(error.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>
    <div class="w-full h-[90vh] flex px-20">
        <div class="w-full flex items-center justify-center h-full">
            <div class="w-1/2 px-32 mb-40">
                <h4 class="text-2xl capitalize mb-5">Admin Access</h4>
                <form action="/owners/login" method="post">
                    <input autocomplete="off" class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="email" placeholder="Email" name="email">
                    <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                        type="password" placeholder="Password" name="password">
                    <input class="px-5 rounded-full py-3 mt-2 bg-blue-500 text-white" type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>