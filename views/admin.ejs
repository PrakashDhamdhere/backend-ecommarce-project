<%- include('./partials/header') %>
<% if(success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>
    <div class="w-full h-[90vh] flex items-start pl-20 pb-20 overflow-hidden">
        <div class="w-[20%] flex h-screen flex-col items-start pr-20 pt-10">
            <div class="flex flex-col">
                <a class="block w-fit mb-2" href="/owners/admin">All Products</a>
                <a class="block w-fit mb-2" href="/owners/createProducts">Create new product</a>
            </div>
        </div>
        <div class="w-[80%] flex flex-col gap-5 h-[90vh] overflow-y-auto py-4">
            <a class="text-red-500" href="">Delete all</a>
            <div class="flex flex-wrap items-start gap-5">
                <%products.forEach((product)=>{%>
                    <div class="w-60 bg-zinc-500 text-[<%=product.textcolor%>]">
                        <div class="w-full h-60 p-4 bg-[<%=product.bgcolor%>]">
                            <img class="h-full w-full object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                alt="">
                        </div>
                        <div class="flex justify-between items-center px-4 py-4 bg-[<%=product.panelcolor%>]">
                            <div>
                                <h3><%=product.name%></h3>
                                <h4>â‚¹ <%=product.price%></h4>
                            </div>
                            <a class="w-7 h-7 flex items-center justify-center rounded-full bg-white" href="">
                                <i class="ri-add-line"></i>
                            </a>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>